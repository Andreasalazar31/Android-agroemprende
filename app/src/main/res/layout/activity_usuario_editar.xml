<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioEditar">

    <androidx.cardview.widget.CardView
        android:layout_width="326dp"
        android:layout_height="536dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:paddingTop="10dp"
        app:cardCornerRadius="23dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-217dp"
            android:text="Editar"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/text_background"
            android:hint="Nombre"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="179dp"
            android:background="@drawable/text_background"
            android:hint="Apellido"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNacimiento"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Telefono"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNumIdentificacion"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="389dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Numero de identificacion"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="459dp">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/btnEditarEmail"
                android:background="@drawable/text_background"
                android:hint="Correo electronico"
                android:padding="14dp"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold" /> <!-- Margen ajustado -->

            <Button
                android:id="@+id/btnEditarEmail"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:text="Editar" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnguardardatos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:elevation="23dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="117dp"
        android:text="Guardar" />

</RelativeLayout>
