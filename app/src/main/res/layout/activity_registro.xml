<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">



    <androidx.cardview.widget.CardView
        android:layout_width="314dp"
        android:layout_height="539dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="23dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-217dp"
            android:text="@string/Registrars"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/text_background"
            android:hint="@string/Registronombre"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="179dp"
            android:background="@drawable/text_background"
            android:hint="@string/registroApellido"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etCorreoElectronico"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/registrocorreo"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="@string/registrotelefono"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="389dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etConfirmPasswordd"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="459dp"
            android:background="@drawable/text_background"
            android:hint="@string/confirpassword"
            android:padding="14dp"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:elevation="23dp"
        android:layout_marginTop="673dp"
        android:layout_marginLeft="117dp"
        android:layout_marginRight="117dp"
        android:text="Registrarse" />

    <TextView
        android:id="@+id/Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="147dp"
        android:layout_marginRight="147dp"
        android:layout_marginTop="730dp"
        android:gravity="center"
        android:text="Inicia Sesion"
        android:textSize="15sp"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>