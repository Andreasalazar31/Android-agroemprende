<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioNotificaciones">



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:layout_marginTop="53dp"
        android:text="Notificaciones"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="377dp"
        android:layout_marginTop="12dp"
        android:layout_height="284dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="293dp"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:contentDescription="@string/proyecto1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_2" />

            <LinearLayout
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agro Cultivos"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Proyecto Revisado"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Buttons -->

            <Button
                android:id="@+id/buttonver"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="289dp"
                android:text="Ver" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/proyecto1" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proyecto1" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>





</LinearLayout>